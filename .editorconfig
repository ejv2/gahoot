# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Global codings styles
[*]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true
indent_style = tab
indent_size = 8
charset = utf-8

# Yaml files must be double indented
[*.{yml,yaml}]
indent_size = 2

# Package.json and .tsconfig.json need
# space indentation
[{package,tsconfig}.json]
indent_style = space
indent_size = 2

# Use idiomatic formatting on TS/JS files
[*.{ts,js}]
indent_style = space
indent_size = 4

# Enforce final newline for markdown files
[*.md]
insert_final_newline = true