<!DOCTYPE html>

<html>

	<head>
		{{template "head.gohtml"}}
		{{template "title" "Find a Game File"}}
	</head>

	<body class="wizard">
		<div class="wizard-box wizard-box-vertical wizard-box-full">
			<h2 class="find-title">Find a Game</h2>
			<div class="find-box">
				<div class="find-dirs">
					<h3>Categories</h3>
					{{range .Categories}}
					<div class="find-item" id="shared">{{.}}</div>
					{{end}}
					<hr>
					<!-- Items uploaded via option 2 -->
					<div class="find-item" id="shared">
						Shared
					</div>
					<!-- Literally everything -->
					<div class="find-item" id="all">
						All
					</div>
				</div>
				<div class="find-quizzes">
					<h3>Quiz File</h3>

					{{range .Quizzes}}
					<div class="find-item">
						<div class="item-top">
							<p><strong>{{.Title}}</strong> - by {{.Author}}</p>
							<a href="/create/game/{{.}}" class="btn btn-primary item-play">Play</a>
						</div>
						<div class="item-description">
							<details>
								<p>{{.Description}}</p>
								<hr>
								<strong>Author:</strong> {{.Author}}
								<br>
								<strong>Questions:</strong> {{len .Questions}}
								<br>
								<strong>Category:</strong> {{.Category}}
								<br>
								<strong>Created:</strong> {{.Created}}

								<br>
								<br>
								<small><strong>SHA256:</strong> {{.}}</small>
							</details>
						</div>
					</div>
					{{end}}
				</div>
			</div>
		</div>
	</body>

</html>
